{
  "name": "@cybozu/ts-asserts",
  "version": "1.0.1",
  "description": "Assertion Library with TS 3.7 Assertion Funnction",
  "main": "lib/node.js",
  "browser": "lib/browser.js",
  "module": "esm/browser.js",
  "types": "esm/asserts.d.ts",
  "files": [
    "lib",
    "esm",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@cybozu/eslint-config": "^11.0.3",
    "@types/jest": "^26.0.20",
    "del-cli": "^3.0.1",
    "eslint": "^7.17.0",
    "husky": "^4.0.10",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "test": "run-s test:*",
    "test:tsc": "tsc -p tsconfig.test.json",
    "test:jest": "jest --coverage",
    "lint": "eslint src *.js",
    "lint-fix": "npm run lint -- --fix",
    "dev": "jest --watch",
    "build": "run-p build:*",
    "build:node": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "del lib esm coverage",
    "prerelease": "run-s clean test build",
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cybozu/ts-asserts.git"
  },
  "keywords": [],
  "author": "Cybozu, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cybozu/ts-asserts/issues"
  },
  "homepage": "https://github.com/cybozu/ts-asserts#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
